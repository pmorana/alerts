<h1>Listing Events</h1>
<p>This page shows all events</p>
<table>
	<tr>
		<th>Title</th>
		<th>Info</th>
		<th colspan="2"></th>
	</tr>

	<%@events.each do |e| %>
	<tr>
		<td><%= e.title %></td>
		<td><%= e.info %></td>
		<td><%= link_to 'Show', event_path(e) %></td>
		<td><%= link_to 'Edit', edit_event_path(e) %></td>
	</tr>
	<%end%>
	<br>
	<tr>	
		<td><%= link_to 'Create New Event', new_event_path %></td>
		<td><%= link_to 'Home', controller: 'welcome' %></td>
	</tr>
</table>