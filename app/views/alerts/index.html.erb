<h1>Listing Alerts</h1>
<p>This page shows all alerts</p>
<table>
	<tr>
		<th>Title</th>
		<th>Info</th>
	</tr>

	<%@alerts.each do |alert| %>
	<tr>
		<td><%= alert.title %></td>
		<td><%= alert.info %></td>
	</tr>
	<%end%>
	<br>
	<tr>	
		<td><%= link_to 'Create New Alert', new_alert_path %></td>
		<td><%= link_to 'Home', controller: 'welcome' %></td>
	</tr>
</table>